<center>
<br /><br /><br />
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "button-link" %>
  </div>
<% end %>
<br />
<%= link_to "Log in", new_user_session_path, :class => 'button-link' %> 
<%= link_to "Sign Up", new_user_registration_path, :class => 'button-link' %> 
</center>
