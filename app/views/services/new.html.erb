<center>
<%= form_for @service do |f| %>
  <div class="form-group">
    <%= f.label :service_name %>:
    <%= f.text_field :service_name, class: "form-control name" %><br />
  </div>
  <div class="form-group">
    <%= f.label :service_cost %>:
    <%= f.number_field :service_cost, class: "form-control cost" %><br />
  </div>
  <%= f.submit 'save', data:{confirm: 'save this data?'}  %>
<% end %>
</center>