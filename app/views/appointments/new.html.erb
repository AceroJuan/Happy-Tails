<center>
<%= form_for @appointment do |f| %>
  <div class="form-group">
    <%= f.label :appointment_time %>:
    <%= f.time_field :appointment_time %><br />
  </div>
  <div class="form-group">
    <%= f.label :service_id %>:
    <%= f.text_field :service_id %><br />
  </div>
  <%= f.submit 'save', data:{confirm: 'save this data?'}  %>
<% end %>
</center>